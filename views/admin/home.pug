form
  .form-group
    label(for='inputTitle') Post Title
    input#inputTitle.form-control(type='text' placeholder='Enter Title')
  .form-group
    label(for='inputContent') Content
    textarea#inputContent.form-control(placeholder='Content' rows='16')
  button.btn.btn-primary(type='submit') Submit
  button.btn.btn-primary(type='button' onclick="location.href='/admin/logout'") Logout
